@model Person

<tr>
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>@Model.Email</td>
    <td>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a> <!-- verwijst naar pagina -->
        
        <button type="button" data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-danger">Delete (modal)</button> <!-- modal popup op pagina zelf (geen andere pagina) -->
    </td>
</tr>